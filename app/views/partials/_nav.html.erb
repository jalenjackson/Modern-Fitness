<script>

    $(".logo").click(function(){
        window.location.href = "/";
    });

    $(window).scroll(function (event) {
        var scroll = $(window).scrollTop();
        if(scroll >= 70){
            $(".main-navbar").css({
                background:"white",
                height:"80px",
                borderBottom: "7px solid black",
                zIndex: "6"
            });
            $(".left-side-nav-items").css({
                marginTop: "30px"
            });
            $(".design-line").hide();
            $(".fa-bars").css({
                marginTop: "30px"
            });
            $(".lower-overlay").css({
                top: "50px"
            });
            $(".profile-pic").addClass("move-down");
            $(".title-container").css({
                marginTop: "25px"
            });
            $(".right-side-nav-items").css({
                marginTop: "25px"
            });
            $(".search-away").css({
                top: "80px"
            });
            $(".animated-dropdown").css({
                marginTop: "-70px"
            });
        } else if(scroll < 70) {
            $(".main-navbar").css({
                background:"none",
                height:"150px",
                borderBottom: "none",
                zIndex: "0"
            });
            $(".design-line").show();

            $(".search-away").css({
                top: "120px"
            });
            $(".fa-bars").css({
                marginTop: "60px"
            });
            $(".profile-pic").removeClass("move-down");
            $(".left-side-nav-items").css({
                marginTop: "75px"
            });
            $(".lower-overlay").css({
                top: "150px"
            });
            $(".animated-dropdown").css({
                marginTop: "-30px"
            });
            $(".title-container").css({
                marginTop: "70px"
            });
            $(".right-side-nav-items").css({
                marginTop: "70px"
            });
        }
    });
    $(".lower-overlay").hide();
    $(".search-input").hide();
    $(".animated-dropdown").hide();
    $(".dropdown-side-img").hide();
    $(".title-of-product").hide();
    $(".price-of-product").hide();
    $(".animated-dropdown-h1").hide();
    $(".listOf-items-dropdown").hide();

    $(".fa-search").click(function(){
        alert();
        $(".search-away").toggleClass("change-height");
        $(".search-input").show();
        $(".search-container").addClass("changeSearchContainerHeight");
    }, function(){
        $(".search-container").removeClass("changeSearchContainerHeight");
    });
</script>