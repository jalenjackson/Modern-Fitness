<div class="main-navbar">
  <i style="color:white; font-size:40px;" class="fa fa-bars" aria-hidden="true"></i>

  <div class="left-side-nav-items">
    <a href="/">Home</a>
    <a class="hover-link" href = "/articles">Articles</a>
    <%= link_to 'Forum', posts_path, :class => 'navbar-link' %>
    <a class="hover-link" href = "">Community</a>
  </div>

  <div class="title-container">
      <img  class="logo" src="http://kinetik-fitness.com/wp-content/themes/rockstar_theme/icon_packs/icons_white/youth_icon.png"/>
  </div>

  <div class="right-side-nav-items">
    <img src="https://www.pathpoint.org/frontend/default/images/search-icon.png"/>

      <% if user_signed_in? %>
        <a href="/articles/new">New Article</a>
        <a href="/user/<%= current_user.username %>"><%= current_user.first_name %> <i class="fa fa-user" aria-hidden="true"></i></a>
          <%= link_to "Logout", destroy_user_session_path, method: :delete  %>
      <% else %>
          <%= link_to "Sign up", new_user_registration_path  %>
          <%= link_to "Login", new_user_session_path  %>
      <% end %>

  </div>
</div>

<script>
    $(".lower-overlay").hide();
    $(".search-input").hide();
    $(".animated-dropdown").hide();
    $(".dropdown-side-img").hide();
    $(".title-of-product").hide();
    $(".price-of-product").hide();
    $(".animated-dropdown-h1").hide();
    $(".listOf-items-dropdown").hide();

    $(".fa-search").click(function(){
        alert();
        $(".search-away").toggleClass("change-height");
        $(".search-input").show();
        $(".search-container").addClass("changeSearchContainerHeight");
    }, function(){
        $(".search-container").removeClass("changeSearchContainerHeight");
    });
</script>