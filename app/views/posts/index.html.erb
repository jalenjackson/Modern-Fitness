<h3>
  <%= link_to "Home", root_path %>
  <br>
  <%= link_to "Add New Post", new_post_path %>
</h3>
<% @posts.each do |p| %>
  <h2>
    <%= link_to p.title, p %>
  </h2>
  <p>
    Published
    <%= time_ago_in_words(p.created_at) %>
    by
    <%= p.user.email %>
    <br>
    <% if current_user.email == p.user.email  %>
        <%= link_to "Edit", edit_post_path(p) %>
        <%= link_to "Delete", post_path(p), method: :delete, data: {confirm: "Are you sure?"} %>
    <% end %>
  </p>
<% end %>
