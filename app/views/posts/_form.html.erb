  @media only screen and (max-width: 350px) {

  }



</style>

<%= render 'partials/nav2' %>

<div class="new-post">
  <h1>What's your fitness related question?</h1>
  <%= form_for @post do |f| %>
        <%= f.text_field :title, placeholder: "What's your question?" %>
        <%= f.text_area :content, placeholder: "Further support your question", class: "text-area" %>
        <%= f.button "Ask Question" %>
  <% end %>
</div>

<%= render 'partials/footer' %>

